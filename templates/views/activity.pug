extends ../layouts/default
include ../mixins/comments
include ../mixins/socials

block content
    .container
        if(activity)
            h1=activity.title
            
            +shareblock

            div
                img(src=activity.image.url height=300 width=300)

            h2=activity.summary
            p !{activity.body}

            hr

            p
                if(activity.topic.length > 0)
                    |Topics:
                    each topic in activity.topic
                        |#{" "+topic.name}
                    |&nbsp;&nbsp;&nbsp;&nbsp;

                if(activity.skill.length > 0)
                    |Skills:
                    each skill in activity.skill
                        |#{" "+skill.name}
                    |&nbsp;&nbsp;&nbsp;&nbsp;

                if(activity.age.length > 0)
                    |Age: #{activity.ageGroup}
                    |&nbsp;&nbsp;&nbsp;&nbsp;
                    
            +comment-block(data.comments)
 
        else
            h2 Sorry, that activity doesn't exist
 
