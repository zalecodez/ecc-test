extends ../layouts/default
include ../mixins/comments
include ../mixins/socials
block content
    .container
        if(data.post)
            h1=data.post.title
            .pull-right
                +fbLink
                +twitterLink
                +pinterestLink
                +googlePlusLink

            div
                img(src=data.post.headImage.url height=300 width=300)
            
            p !{data.post.content}
            br
            if(data.post.tags.length > 0)
                p
                    |Tags:
                    each tag in data.post.tags
                        |#{" "+tag.name}
        else
            h2 Error. Blog post doesn't exist

